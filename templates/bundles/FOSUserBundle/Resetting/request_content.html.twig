{% trans_default_domain 'FOSUserBundle' %}

<div id="forgotten_password_form" class="nice_forms">
    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
        <div class="row">
            <div id="form">
                <div class="form-group ">
                    <label class="form-control-label required" for="username">{{ 'resetting.request.username'|trans }}</label>
                    <input type="text" id="username" name="username" required="required" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <button type="submit" id="form_submit" name="form[submit]" class="btn-secondary btn">{{ 'resetting.request.submit'|trans }}</button>
            </div>
        </div>
    </form>
</div>